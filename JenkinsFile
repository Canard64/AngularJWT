pipeline {
    agent any

    stages {
         stage('Clone') {
            steps {
                echo 'Cloning..'
                  sh 'rm -rf *'
                sh 'git clone https://github.com/Canard64/AngularJWT'
                sh ' cd ./AngularJWT'

            }
        },
          stage('Dependencies') {
            steps {
            dir('./AngularJWT'){
                 sh '$PWD'
                 sh 'npm install'

                   }
           }


        }
    }
}
