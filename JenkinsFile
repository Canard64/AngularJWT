pipeline {
    agent any

    stages {
         stage('Clone') {
            steps {
                echo 'Cloning..'
                sh 'rm -rf *'
                sh 'git clone https://github.com/Canard64/AngularJWT'
                sh 'npm --version'
                sh 'npm install express'
                sh 'npm init -y'
            }
        }
          stage('Build') {
            steps {
                echo 'Building.'
                sh 'cd AngularJWT/'
                sh 'npm run build --dev'
            }
        }
    }
}
