pipeline {
    agent any

    stages {
         stage('Clone') {
            steps {
                echo 'Cloning..'
                  sh 'rm -rf *'
                sh 'git clone https://github.com/Canard64/AngularJWT'
                sh ' cd ./AngularJWT'

            }
        }
          stage('Dependencies') {
            steps {

              sh 'npm install'
              sh 'ng build'
            }
        }
    }
}
