pipeline {
    agent any

    stages {
         stage('Clone') {
            steps {
                echo 'Cloning..'
                  sh 'rm -rf *'
                sh 'git clone https://github.com/Canard64/AngularJWT'

            }
        }
          stage('Dependencies') {
            steps {
              sh "cd /var/lib/jenkins/workspace/UD_master/AngularJWT"
                sh 'npm install'

               }
        }
        stage('Test') {
            steps {
                sh 'npm test'
               }
        }

    }
}
