pipeline {
    agent any

    stages {
         stage('Clone') {
            steps {
                echo 'Cloning..'
                  sh 'rm -rf *'
                sh 'git clone https://github.com/Canard64/AngularJWT'

            }
        }
          stage('Dependencies') {
            steps {
              sh '$PWD'
               sh 'npm install'
                echo 'On change de dir.'
              dir('./AngularJWT'){
                 sh '$PWD'
                 sh 'npm install'              }
           }
        }
    }
}
